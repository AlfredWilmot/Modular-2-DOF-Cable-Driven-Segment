<!-- All launch files needed in ordre to do some basic motion palnning  -->
<launch>

    <!-- launch robot sim -->
    <include file="$(find mypackage)/launch/segment_sim.launch"/>

    <!-- launch moveit using the configuration generated by the wizard, for path planning and accepting goals -->
    <include file="$(find segment_moveit_config)/launch/move_group.launch"/>

    <!-- use rviz to send configuration to send goals -->
    <include file="$(find segment_moveit_config)/launch/moveit_rviz.launch">
        <arg name="config" value="True"/>
    </include>
    
</launch>